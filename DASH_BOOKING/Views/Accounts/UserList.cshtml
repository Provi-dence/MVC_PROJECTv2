@model IEnumerable<DASH_BOOKING.Models.User>

@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/Panel_Layout.cshtml";
}

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section">User List</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-wrap">
                    @if (Model != null && Model.Any())
                    {
                        <table class="table table-striped table-hover table-responsive-xl">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Email Address</th>
                                    <th>User Name</th>
                                    <th>Role</th>
                                    <th>Date Created</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td class="d-flex align-items-center">
                                            <div class="pl-3 email">
                                                <span>@user.Email</span>
                                                <span>Added: @user.CreatedAt.ToShortDateString()</span>
                                            </div>
                                        </td>
                                        <td>@user.UserName</td>
                                        <td>@user.Role</td>
                                        <!--<td>
                                             <span class="badge badge-@GetBadgeClass(user.Status)">@user.Status</span>
                                         </td>-->

                                        <td>@user.CreatedAt.ToShortDateString()</td>
                                        <td>
                                            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmDeleteModal-@user.UserId">
                                                Delete
                                            </button>
                                        </td>
                                    </tr>

                                    <!-- Modal -->
                                    <div class="modal fade" id="confirmDeleteModal-@user.UserId" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Delete</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to delete this user?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                    <a href="@Url.Action("DeleteUser", "Accounts", new { id = user.UserId })" class="btn btn-danger">Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="alert alert-info">No users available.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@functions {
    public string GetBadgeClass(string status)
    {
        switch (status)
        {
            case "Active":
                return "success";
            case "Inactive":
                return "warning";
            case "Banned":
                return "danger";
            default:
                return "secondary";
        }
    }
}

<style>
    .table-wrap {
        overflow-x: auto;
        margin-bottom: 20px;
    }

    .table {
        width: 100%; /* Ensure the table takes full width */
    }

        .table thead {
            background-color: #343a40;
            color: #fff;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, .05);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 0, 0, .075);
    }

    .d-flex.align-items-center {
        display: flex;
        align-items: center;
    }

    .pl-3.email {
        padding-left: 1rem;
    }

    .badge {
        font-size: 1rem;
        padding: 0.5em 1em;
    }

    .close {
        border: none;
        background: none;
        font-size: 1.5rem;
    }

    .alert {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

        .alert .email {
            flex-grow: 1;
        }

    .table td, .table th {
        padding: 0.75rem;
    }
</style>
