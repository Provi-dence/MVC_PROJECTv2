@model IEnumerable<DASH_BOOKING.Models.EventRequest>

@{
    ViewBag.Title = "Panel";
    Layout = "~/Views/Shared/Panel_Layout.cshtml";
}

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section">Event Requests</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-wrap">
                    @if (Model != null && Model.Any())
                    {
                        <table class="table table-responsive-xl">
                            <thead>
                                <tr>
                                    <th>&nbsp;</th>
                                    <th>Event Name</th>
                                    <th>Description</th>
                                    <th>Event Date</th>
                                    <th>Event Time</th>
                                    <th>Location</th>
                                    <th>Organizer Email</th>
                                    <th>Organizer Phone</th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var eventRequest in Model)
                                {
                                    <tr class="alert" role="alert">
                                        <td>
                                            <label class="checkbox-wrap checkbox-primary">
                                                <input type="checkbox" checked>
                                                <span class="checkmark"></span>
                                            </label>
                                        </td>
                                        <td>@eventRequest.EventName</td>
                                        <td>@eventRequest.Description</td>
                                        <td>@eventRequest.EventDate.ToShortDateString()</td>
                                        <td>@eventRequest.EventTime</td>
                                        <td>@eventRequest.Location</td>
                                        <td>@eventRequest.OrganizerEmail</td>
                                        <td>@eventRequest.OrganizerPhone</td>
                                        <td>
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <span aria-hidden="true"><i class="fa fa-close"></i></span>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No event requests available.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
