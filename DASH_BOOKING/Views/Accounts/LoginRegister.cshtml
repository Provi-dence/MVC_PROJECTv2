@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/assets/style.css" />
    <style>
        .custom-input {
            padding: 15px 5px !important;
            margin-left: 10px !important;
            margin-top: 20px !important;
            width: 260px !important;
            border: none !important;
            text-align: left !important;
            color: #757575 !important;
        }
    </style>
</head>
<body>
    <div class="cotn_principal">
        <div class="cont_centrar">
            <div class="cont_login">
                <div class="cont_info_log_sign_up">
                    <div class="col_md_login">
                        <div class="cont_ba_opcitiy">
                            <h2>LOGIN</h2>
                            <p>Welcome! Please login your account.</p>
                            <p></p>
                            <button class="btn_login" onclick="change_to_login()">LOGIN</button>
                        </div>
                    </div>
                    <div class="col_md_sign_up">
                        <div class="cont_ba_opcitiy">
                            <h2>SIGN UP</h2>
                            <p>Sign up now to get started!</p>
                            <button class="btn_sign_up" onclick="change_to_sign_up()">SIGN UP</button>
                        </div>
                    </div>
                </div>
                <div class="cont_back_info">
                    <div class="cont_img_back_grey">
                        <img src="~/images/Backgrounds/1.png" />
                    </div>
                </div>
                <div class="cont_forms">
                    <div class="cont_img_back_">
                        <img src="~/images/Backgrounds/1.png" />
                    </div>
                    <div class="cont_form_login">
                        <a href="#" onclick="hidden_login_and_sign_up()"><img src="~/images/icons/arrow-left-25.png" /></a>
                        <h2>LOGIN</h2>
                        @using (Html.BeginForm("Login", "Accounts", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <input type="email" name="Email" placeholder="Email" class="custom-input" required />
                            <input type="password" name="Password" placeholder="Password" class="custom-input" required />
                            <button type="submit" class="btn_login">LOGIN</button>
                        }
                    </div>
                    <div class="cont_form_sign_up">
                        <a href="#" onclick="hidden_login_and_sign_up()"><img src="~/images/icons/arrow-left-25.png" /></a>
                        <h2>SIGN UP</h2>
                        @using (Html.BeginForm("Register", "Accounts", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <input type="text" name="UserName" placeholder="User" class="custom-input" required />
                            <input type="email" name="Email" placeholder="Email" class="custom-input" required />
                            <input type="password" name="Password" placeholder="Password" class="custom-input" required />
                            <input type="password" name="ConfirmPassword" placeholder="Confirm Password" class="custom-input" required />
                            <button type="submit" class="btn_sign_up">SIGN UP</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const time_to_show_login = 400;
        const time_to_hidden_login = 200;

        function change_to_login() {
            document.querySelector('.cont_forms').className = "cont_forms cont_forms_active_login";
            document.querySelector('.cont_form_login').style.display = "block";
            document.querySelector('.cont_form_sign_up').style.opacity = "0";

            setTimeout(function () { document.querySelector('.cont_form_login').style.opacity = "1"; }, time_to_show_login);

            setTimeout(function () {
                document.querySelector('.cont_form_sign_up').style.display = "none";
            }, time_to_hidden_login);
        }

        const time_to_show_sign_up = 100;
        const time_to_hidden_sign_up = 400;

        function change_to_sign_up(at) {
            document.querySelector('.cont_forms').className = "cont_forms cont_forms_active_sign_up";
            document.querySelector('.cont_form_sign_up').style.display = "block";
            document.querySelector('.cont_form_login').style.opacity = "0";

            setTimeout(function () {
                document.querySelector('.cont_form_sign_up').style.opacity = "1";
            }, time_to_show_sign_up);

            setTimeout(function () {
                document.querySelector('.cont_form_login').style.display = "none";
            }, time_to_hidden_sign_up);
        }

        const time_to_hidden_all = 500;

        function hidden_login_and_sign_up() {
            document.querySelector('.cont_forms').className = "cont_forms";
            document.querySelector('.cont_form_sign_up').style.opacity = "0";
            document.querySelector('.cont_form_login').style.opacity = "0";

            setTimeout(function () {
                document.querySelector('.cont_form_sign_up').style.display = "none";
                document.querySelector('.cont_form_login').style.display = "none";
            }, time_to_hidden_all);
        }
    </script>
</body>
</html>
