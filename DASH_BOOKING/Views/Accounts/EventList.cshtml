@model IEnumerable<DASH_BOOKING.Models.EventModel>

@{
    ViewBag.Title = "Event List";
    Layout = "~/Views/Shared/Panel_Layout.cshtml";
}

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section">Event List</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-wrap">
                    <table class="table table-responsive-xl table-bordered table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th>Event Name</th>
                                <th>Description</th>
                                <th>Event Date</th>
                                <th>Event Time</th>
                                <th>Location</th>
                                <th>Organizer Email</th>
                                <th>Organizer Phone</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                var count = 0;
                                foreach (var eventModel in Model)
                                {
                                    <tr class="@(count++ % 2 == 0 ? "even-row" : "odd-row")">
                                        <td>@eventModel.EventName</td>
                                        <td>@eventModel.Description</td>
                                        <td>@eventModel.EventDate.ToString("MM/dd/yyyy")</td>
                                        <td>@eventModel.EventTime.ToString("hh:mm tt")</td>
                                        <td>@eventModel.Location</td>
                                        <td>@eventModel.OrganizerEmail</td>
                                        <td>@eventModel.OrganizerPhone</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7">No events found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .table-wrap {
        overflow-x: auto;
        margin-bottom: 20px;
    }

    .table {
        border-collapse: collapse;
        width: 100%;
    }

        .table th,
        .table td {
            padding: 10px;
            text-align: center;
            vertical-align: middle;
        }

        .table th {
            font-weight: 600;
            background-color: #343a40;
            color: #fff;
        }

        .table td {
            font-weight: 400;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, .05);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 0, 0, .075);
    }

    .even-row {
        background-color: #f5f5f5; /* Light gray background for even rows */
    }

    .odd-row {
        background-color: #fff; /* White background for odd rows */
    }
</style>
