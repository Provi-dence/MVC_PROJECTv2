@model IEnumerable<DASH_BOOKING.Models.EventModel>

@{
    ViewBag.Title = "Event List";
    Layout = "~/Views/Shared/Panel_Layout.cshtml";
}

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section">Event List</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-wrap">
                    <table class="table table-responsive-xl table-bordered table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th>Image</th>
                                <th>Event Name</th>
                                <th>Category</th> <!-- New column for category -->
                                <th>Description</th>
                                <th>Event Date</th>
                                <th>Event Time</th>
                                <th>Location</th>
                                <th>Organizer Email</th>
                                <th>Organizer Phone</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                var count = 0;
                                foreach (var eventModel in Model)
                                {
                                    <tr class="@(count++ % 2 == 0 ? "even-row" : "odd-row")">
                                        <td>
                                            @if (eventModel.Images != null && eventModel.Images.Any())
                                            {
                                                var firstImage = eventModel.Images.FirstOrDefault();
                                                <img src="@Url.Content(firstImage.Image)" alt="Event Image" style="max-width: 100px;" />
                                            }
                                            else
                                            {
                                                <span>No Image</span>
                                            }
                                        </td>
                                        <td>@eventModel.EventName</td>
                                        <td>@eventModel.Description</td>
                                        <td>@eventModel.EventCategory</td> <!-- Display event category -->
                                        <td>@eventModel.EventDate.ToString("MM/dd/yyyy")</td>
                                        <td>@eventModel.EventTime.ToString("hh:mm tt")</td>
                                        <td>@eventModel.Location</td>
                                        <td>@eventModel.OrganizerEmail</td>
                                        <td>@eventModel.OrganizerPhone</td>
                                        <td>
                                            <div class="btn-group" role="group" aria-label="Event Actions">
                                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteConfirmationModal" data-event-id="@eventModel.Id">Delete</button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="10">No events found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
                <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Deletion</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete this event?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-danger" id="confirmDeleteButton">Delete Event</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

<style>
    .table-wrap {
        overflow-x: auto;
        margin-bottom: 20px;
    }

    .table {
        border-collapse: collapse;
        width: 100%;
    }

        .table th, .table td {
            padding: 10px;
            text-align: center;
            vertical-align: middle;
        }

        .table th {
            font-weight: 600;
            background-color: #343a40;
            color: #fff;
        }

        .table td {
            font-weight: 400;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, .05);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 0, 0, .075);
    }

    .even-row {
        background-color: #f5f5f5;
    }

    .odd-row {
        background-color: #fff;
    }
</style>


<script>
    $(document).ready(function () {
        var eventIdToDelete = null;

        // Capture event ID when delete button is clicked
        $('#deleteConfirmationModal').on('show.bs.modal', function (e) {
            var button = $(e.relatedTarget);
            eventIdToDelete = button.data('event-id');
        });

        // Handle delete confirmation button click
        $('#confirmDeleteButton').click(function () {
            if (eventIdToDelete) {
                $.ajax({
                    url: '@Url.Action("Delete", "Accounts")', // Ensure this URL is correct
                    type: 'POST',
                    data: { id: eventIdToDelete },
                    success: function (response) {
                        if (response.success) {
                            // Hide the modal
                            $('#deleteConfirmationModal').modal('hide');
                            // Remove the row from the table
                            $('button[data-event-id="' + eventIdToDelete + '"]').closest('tr').remove();
                            // Optionally, display a success message
                            alert('Event deleted successfully.');
                        } else {
                            alert('Error deleting event: ' + response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('Error deleting event:', error);
                        alert('Error deleting event. Please try again.');
                    }
                });
            }
        });

        // Remove modal from DOM on hide
        $('#deleteConfirmationModal').on('hidden.bs.modal', function () {
            eventIdToDelete = null; // Clear the event ID
        });
    });
</script>



