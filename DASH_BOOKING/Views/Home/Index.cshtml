<main id="main">

    <!-- ======= Services Section ======= -->
    <section class="services">
        <div class="container">

            <div class="row">
                <div class="col-md-6 col-lg-3 d-flex align-items-stretch" data-aos="fade-up">
                    <div class="icon-box icon-box-pink">
                        <div class="icon"><img src="~/images/run-icon.png" alt="Running Icon" width="36"></div>
                        <h4 class="title"><a href="@Url.Action("Events", "Event")">Running</a></h4>
                        <p class="description">Seamless Online Registration for Passionate Runners</p>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="100">
                    <div class="icon-box icon-box-cyan">
                        <div class="icon"><img src="~/images/bike-icon.png" alt="Biking Icon" width="36"></div>
                        <h4 class="title"><a href="@Url.Action("Events", "Event")">Biking</a></h4>
                        <p class="description">Exploring Adventures on Two Wheels</p>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="200">
                    <div class="icon-box icon-box-green">
                        <div class="icon"><img src="~/images/swim-icon.png" alt="Swimming Icon" width="36"></div>
                        <h4 class="title"><a href="@Url.Action("Events", "Event")">Swimming</a></h4>
                        <p class="description">Dive into a World of Aquatic Fitness</p>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="200">
                    <div class="icon-box icon-box-blue">
                        <div class="icon"><img src="~/images/ultramarathon-icon.png" alt="Ultramarathon Icon" width="36"></div>
                        <h4 class="title"><a href="@Url.Action("Events", "Event")">Ultramarathon</a></h4>
                        <p class="description">Embark on the Ultimate Endurance Journey</p>
                    </div>
                </div>


            </div>

        </div>
    </section><!-- End Services Section -->
    <!-- ======= Why Us Section ======= -->
    <section class="why-us section-bg" data-aos="fade-up" data-aos-delay="200">
        <div class="container">

            <div class="row">
                <div class="col-lg-6 video-box">
                    <img src="@Url.Content("~/images/carousel-2.png")" class="img-fluid" alt="">
                    <a href="https://www.youtube.com/watch?v=jDDaplaOz7Q" class="venobox play-btn mb-4" data-vbtype="video" data-autoplay="true"></a>
                </div>

                <div class="col-lg-6 d-flex flex-column justify-content-center p-5">

                    <div class="icon-box">
                        <div class="icon"><i class="bx bx-fingerprint"></i></div>
                        <h4 class="title"><a href="#">Seamless Registration</a></h4>
                        <p class="description">Effortlessly sign up for our upcoming marathon events and join a community of passionate runners.</p>
                    </div>

                    <div class="icon-box">
                        <div class="icon"><i class="bx bx-gift"></i></div>
                        <h4 class="title"><a href="#">Join the Community</a></h4>
                        <p class="description">Connect with fellow marathon enthusiasts, share your experiences, and stay motivated throughout your journey.</p>
                    </div>

                </div>
            </div>

        </div>
    </section><!-- End Why Us Section -->
